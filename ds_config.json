{
  "fp16": {
    "enabled": "auto"
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": "auto",
      "weight_decay": "auto"
    }
  },
  "scheduler": {
    "type": "OneCycle",
    "params": {
      "cycle_first_step_size": 4750,
      "cycle_first_stair_count": 0,
      "cycle_second_stair_count": 0,
      "cycle_momentum": true,
      "cycle_min_mom": 0.85,
      "decay_step_size": 0,
      "cycle_min_lr": 3e-5,
      "cycle_max_lr": 3e-4,
      "decay_lr_rate": 0.0,
      "cycle_max_mom": 0.95,
      "decay_mom_rate": 0.0
    }
  },
  "zero_optimization": {
    "stage": 2,
    "allgather_partitions": true,
    "allgather_bucket_size": 5e8,
    "overlap_comm": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 5e8,
    "contiguous_gradients": true
  },
  "wandb": {
    "enabled": true,
    "team": "bioinformatics-group",
    "group": "my_group",
    "project": "plm_secondary_integration"
  },
  "csv_monitor": {
    "enabled": true,
    "output_path": "output/ds_logs/",
    "job_name": "TooT-PLM-P2T"
  },
  "gradient_accumulation_steps": "auto",
  "gradient_clipping": "auto",
  "train_batch_size": "auto",
  "train_micro_batch_size_per_gpu": "auto",
  "steps_per_print": 2000,
  "wall_clock_breakdown": false
}
